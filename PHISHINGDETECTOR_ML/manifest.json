{
  "manifest_version": 3,
  "name": "Signature_Based Phishing Detector",
  "version": "1.2",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "phish.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "phish.png",
    "32": "phish.png",
    "48": "phish.png",
    "128": "phish.png"
  }
}