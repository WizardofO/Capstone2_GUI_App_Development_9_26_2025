{
  "manifest_version": 3,
  "name": "URL Phishing Detector (Local Model)",
  "version": "1.0",
  "description": "Detects potential phishing while you type URLs using your local ML model server.",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Detector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
